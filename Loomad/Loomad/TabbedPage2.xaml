<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loomad.TabbedPage2"
            Title="Медведи">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BackgroundColor="LightGoldenrodYellow"
                         />

            <Label Text="О медведях"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontSize="Large"
                   FontAttributes="Bold"
                   TextColor="Orchid"
                   />

            <Label Text="Медведи – на сегодняшний день, самые крупные представители хищников. Из них самыми крупными размерами обладают белые медведи. Максимальная масса белого медведя достигает 725 кг. Максимальный рост - 3,5 метров."
            HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center"
                   FontSize="Medium"
                   TextColor="Black"
                   />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>